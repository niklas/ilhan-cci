#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'

require 'optparse'
require 'pp'


$:.unshift File.expand_path('../../lib', __FILE__)
require 'cache'
require 'crunch'
require 'utils'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: #{$1} [options]"

  opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
    options[:verbose] = v
  end
end.parse!


if $0 == __FILE__
  c = Crunch.new

  Utils.plot(c.values, output: 'closing.png', title: 'Closing values')
  Utils.plot(c.cci, output: 'cci.png', title: 'Commodity Channel Index')
end
