#!/usr/bin/env ruby

require 'optparse'

$:.unshift File.expand_path('../../lib', __FILE__)
require 'cache'
require 'crunch'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: #{$1} [options]"

  opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
    options[:verbose] = v
  end
end.parse!


if $0 == __FILE__
  c = Crunch.new

  puts c.json
end
